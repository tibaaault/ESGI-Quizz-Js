datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  password String
  role     String
  Stats    Stats[]
}

model Quizz {
  id         Int        @id @default(autoincrement())
  title      String
  duration   Int
  created    DateTime   @default(now())
  category   Category   @relation(fields: [categoryId], references: [id])
  categoryId Int
  questions  Question[]
  Stats      Stats[]
}

model Category {
  id     Int     @id @default(autoincrement())
  libelle String
  quizzes Quizz[]
}

model Question {
  id      Int      @id @default(autoincrement())
  libelle String
  quizz   Quizz    @relation(fields: [quizzId], references: [id])
  quizzId Int
  answers Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  libelle    String
  statut     Boolean
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
}

model Stats {
  id       Int      @id @default(autoincrement())
  date     DateTime
  time     Int
  result   Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  quizz    Quizz    @relation(fields: [quizzId], references: [id])
  quizzId  Int
}
